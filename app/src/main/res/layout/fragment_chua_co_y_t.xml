<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.YeuThich.ChuaCoYTFragment"
    android:gravity="center"
    android:orientation="vertical">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:text="CHƯA LƯU MẶT HÀNG YÊU THÍCH "
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textSize="20sp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhấp vào biểu tượng yêu thích để lưu mặt hàng"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/xemSp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:padding="3dp"
            android:background="@color/black"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="XEM SẢN PHẨM"
                android:textColor="#ffff"
                />
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_muiten"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>