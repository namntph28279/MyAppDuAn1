<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ManHinhDangNhapDangKy.ManHinhDangNhap">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        app:navigationIcon="@drawable/ic_back_24"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:titleTextColor="@color/black"
        android:layout_height="?attr/actionBarSize"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/nhan"
          android:layout_marginBottom="25dp"
          />
      <LinearLayout
          android:layout_marginBottom="10dp"
          android:layout_width="170dp"
          android:layout_height="48dp"
          android:gravity="center"
          >
          <TextView

              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Chào mừng đến với Shops Sneakers"
              android:textColor="#223263"
              android:textStyle="bold"
              android:textSize="16dp"/>
      </LinearLayout>

      <TextView
          android:layout_marginBottom="23dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Đăng nhập để tiếp tục "
          android:textSize="12dp"
          android:textColor="#9098B1"
          />

      <EditText
          android:layout_marginBottom="8dp"
          android:id="@+id/inputNamedn"
          android:layout_width="343dp"
          android:layout_height="wrap_content"

          android:background="@drawable/round_border"
          android:drawableStart="@drawable/name"
          android:drawablePadding="16dp"
          android:ems="10"
          android:hint="User"

          android:padding="16dp"
          />
      <EditText
          android:id="@+id/inputPassdn"
          android:layout_width="343dp"
          android:layout_height="wrap_content"
          android:background="@drawable/round_border"
          android:drawableStart="@drawable/password"
          android:drawablePadding="16dp"

          android:hint="Password"
          android:inputType="textEmailAddress"
          android:padding="16dp"
          />
      <androidx.cardview.widget.CardView
          android:layout_marginTop="15dp"
          android:layout_width="343dp"
          android:layout_height="48dp"
          app:cardCornerRadius="5dp"
          android:id="@+id/Dangnhapdn">
          <TextView
              android:textStyle="bold"
              android:gravity="center"
              android:layout_width="343dp"
              android:layout_height="48dp"
              android:textSize="14dp"
              android:text="Đăng nhập"
              android:textColor="@color/white"
              android:background="@color/black"/>
      </androidx.cardview.widget.CardView>

      <TextView
          android:textStyle="bold"
          android:padding="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OR"
          android:textColor="#9098B1"
          android:textSize="14dp"
          />
      <LinearLayout
          android:layout_marginBottom="8dp"
          android:layout_width="343dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <LinearLayout
              android:layout_marginBottom="8dp"
              android:background="@drawable/round_border"
              android:drawableStart="@drawable/password"
              android:gravity="center"
              android:layout_width="343dp"
              android:layout_height="50dp"
              android:orientation="horizontal">

              <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:src="@drawable/google"/>
              <TextView
                  android:layout_width="277dp"
                  android:layout_height="25dp"
                  android:text="Đăng nhập bằng Google"
                  android:gravity="center"
                  android:textSize="16dp"
                  android:textColor="#9098B1"
                  android:textStyle="bold"/>

          </LinearLayout>

          <LinearLayout
              android:layout_marginBottom="15dp"
              android:background="@drawable/round_border"
              android:drawableStart="@drawable/password"
              android:gravity="center"
              android:layout_width="343dp"
              android:layout_height="50dp"
              android:orientation="horizontal">

              <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:src="@drawable/facebook"/>
              <TextView
                  android:layout_width="277dp"
                  android:layout_height="25dp"
                  android:text="Đăng nhập bằng Facebook"
                  android:gravity="center"
                  android:textSize="16dp"
                  android:textColor="#9098B1"
                  android:textStyle="bold"/>

          </LinearLayout>


      </LinearLayout>

      <TextView
          android:layout_marginBottom="8dp"
          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Quên mật khẩu?"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:textSize="12dp"

          />
      <LinearLayout

          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView

              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="Bạn là người mới? "
              android:textSize="12dp" />
          <TextView
              android:padding="0.5dp"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:textSize="12dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Đăng ký"/>

      </LinearLayout>
  </LinearLayout>
</LinearLayout>