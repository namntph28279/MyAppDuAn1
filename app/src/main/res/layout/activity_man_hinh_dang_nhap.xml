<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.poly.myapp.Activity.ManHinhDangNhapDangKy.ManHinhDangNhap">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBardn"
        app:navigationIcon="@drawable/ic_back_24"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:titleTextColor="@color/black"
        android:layout_height="?attr/actionBarSize"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/nhan"
          android:layout_marginBottom="15dp"
          />

      <LinearLayout
          android:layout_marginBottom="7dp"
          android:layout_width="170dp"
          android:layout_height="48dp"
          android:gravity="center"
          >
          <TextView
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Chào mừng đến với Shops Sneakers"
              android:textColor="#223263"
              android:textStyle="bold"
              android:textSize="16dp"/>
      </LinearLayout>

      <TextView
          android:layout_marginBottom="15dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Đăng nhập để tiếp tục "
          android:textSize="12dp"
          android:textColor="#9098B1"
          />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/checkuser"
          android:layout_width="343dp"
          android:layout_height="63dp"
          app:errorEnabled="true"
          android:layout_margin="7dp"
          android:hint="User"
          app:boxBackgroundColor="#FFFFFF"
          app:boxBackgroundMode="outline"
          app:boxStrokeColor="#A39B9B"
          app:endIconMode="clear_text"
          app:hintTextColor="#777676"
          app:startIconDrawable="@drawable/name">

          <com.google.android.material.textfield.TextInputEditText

              android:id="@+id/inputNamedn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textWebEmailAddress|textPersonName"
              android:paddingBottom="15dp" />
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/checkpass"
          android:layout_width="343dp"
          android:layout_height="63.5dp"
          android:layout_marginBottom="3dp"
          android:hint="Password"
          app:errorEnabled="true"
          app:boxBackgroundColor="#FFFFFF"
          app:boxBackgroundMode="outline"
          app:boxStrokeColor="#A39B9B"
          app:endIconMode="password_toggle"
          app:endIconTint="#9A9897"
          app:hintTextColor="#777676"
          app:startIconDrawable="@drawable/password">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/inputPassdn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textPassword"
              android:paddingBottom="15dp" />
      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:id="@+id/tt"
          android:layout_marginLeft="23dp"
          android:gravity="left"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="2dp"
          android:text=""
          android:textColor="#FF0000"
          android:textSize="13sp"

          />

      <androidx.cardview.widget.CardView
          android:layout_marginTop="5dp"
          android:layout_width="343dp"
          android:layout_height="48dp"
          app:cardCornerRadius="5dp"
          android:id="@+id/Dangnhapdn">
          <TextView
              android:textStyle="bold"
              android:gravity="center"
              android:layout_width="343dp"
              android:layout_height="48dp"
              android:textSize="14dp"
              android:text="Đăng nhập"
              android:textColor="@color/white"
              android:background="@color/black"/>
      </androidx.cardview.widget.CardView>

      <TextView
          android:textStyle="bold"
          android:padding="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="OR"
          android:textColor="#9098B1"
          android:textSize="14dp"
          />

      <LinearLayout
          android:layout_marginBottom="8dp"
          android:layout_width="343dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <LinearLayout
              android:id="@+id/dangnhapgg"
              android:layout_marginBottom="8dp"
              android:background="@drawable/round_border"
              android:drawableStart="@drawable/password"
              android:gravity="center"
              android:layout_width="343dp"
              android:layout_height="50dp"
              android:orientation="horizontal">

              <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:src="@drawable/google"/>
              <TextView
                  android:layout_width="277dp"
                  android:layout_height="25dp"
                  android:text="Đăng nhập bằng Google"
                  android:gravity="center"
                  android:textSize="16dp"
                  android:textColor="#9098B1"
                  android:textStyle="bold"/>

          </LinearLayout>


      </LinearLayout>

      <TextView
          android:id="@+id/txtQuen"
          android:layout_marginBottom="8dp"
          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Quên mật khẩu?"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:textSize="15dp"

          />

      <LinearLayout

          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView

              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="Bạn là người mới? "
              android:textSize="15dp" />
          <TextView
              android:id="@+id/txtDangKy"
              android:padding="0.5dp"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:textSize="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Đăng ký"/>

      </LinearLayout>

  </LinearLayout>
</LinearLayout>