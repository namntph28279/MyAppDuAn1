<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="vn.poly.myapp.Activity.ThanhPhanTrongTK.DoiMatKhau">

    <androidx.appcompat.widget.Toolbar
        app:title="ĐỔI MẬT KHẨU"
        android:id="@+id/toolBar"
        app:navigationIcon="@drawable/ic_back_24"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:titleTextColor="@color/black"
        android:layout_height="48dp"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolBar" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center"
            android:id="@+id/cu"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu cũ"
            app:errorEnabled="true"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#A39B9B"
            app:endIconMode="password_toggle"
            app:endIconTint="#9A9897"
            app:hintTextColor="#777676"
            app:startIconDrawable="@drawable/password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtpasscu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingBottom="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center"
            android:id="@+id/moi"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Mật khẩu mới"
            app:errorEnabled="true"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#A39B9B"
            app:endIconMode="password_toggle"
            app:endIconTint="#9A9897"
            app:hintTextColor="#777676"
            app:startIconDrawable="@drawable/password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtpassmoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingBottom="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center"
            android:id="@+id/laimoi"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Nhập lại mật khẩu mới"
            app:errorEnabled="true"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#A39B9B"
            app:endIconMode="password_toggle"
            app:endIconTint="#9A9897"
            app:hintTextColor="#777676"
            app:startIconDrawable="@drawable/password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtnhaplaipass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingBottom="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/thongbaodk"
            android:textColor="#FA0808"
            android:textSize="20sp"/>


        <androidx.cardview.widget.CardView
            android:layout_marginBottom="18dp"
            android:layout_marginTop="70dp"
            android:layout_width="343dp"
            android:layout_height="48dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/DoiMatKhau">
            <TextView

                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="343dp"
                android:layout_height="48dp"
                android:textSize="18dp"
                android:text="ĐỔI MẬT KHẨU"
                android:textColor="@color/white"
                android:background="@color/black"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>