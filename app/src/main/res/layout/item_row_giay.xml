<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_giay"
        android:layout_width="170dp"
        android:layout_height="200dp"

        android:backgroundTint="#ECEDEF"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/img_yeu_thich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/fa" />


        <ImageView
            android:id="@+id/img_res"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/tv_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:text="Ten do vat"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="176dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Giá: "
                android:textColor="#DA1414"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tv_moTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#DA1414"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ"
                android:textColor="#DA1414"
                android:textSize="16dp" />
        </LinearLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>