<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ThanhPhanTrongTK.QuenMatKhau">

    <androidx.appcompat.widget.Toolbar
        app:title=""
        android:id="@+id/toolBar"
        app:navigationIcon="@drawable/ic_back_24"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:titleTextColor="@color/black"
        android:layout_height="?attr/actionBarSize"/>

    <TextView
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUÊN MẬT KHẨU"/>

    <TextView

        android:padding="15dp"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập email đã đăng ký để chúng tôi gửi mã xác thực để đặt lại mật khẩu"/>

    <EditText

        android:layout_marginBottom="8dp"
        android:id="@+id/inputNamedn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_margin="15dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/email"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Email"

        android:padding="16dp"
        />
    <androidx.cardview.widget.CardView

        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="343dp"
        android:layout_height="48dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/Dangnhapdn">
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:textSize="18dp"
            android:text="TIẾP TỤC"
            android:textColor="@color/white"
            android:background="#038C7F"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>