<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="vn.poly.myapp.Fragment.TaiKhoan.Fragment_Accout">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:title="TÀI KHOẢN"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/anh_nguoi"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:orientation="vertical"
        >
        <TextView
            android:textSize="23.7dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐĂNG NHẬP ĐỂ BẮT ĐẦU "
            />
        <TextView
            android:textSize="23.7dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUA SẮM"/>

    </LinearLayout>


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="257.98dp"
        android:layout_height="67.71dp"
        android:text="Mọi thứ trở lên thuận tiện và dễ dàng hơn chỉ với 1 nút click bạn đã có những mặt yêu thích của mình thanh toán thuận tiện giá cả phù hợp "
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="10.83dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/btnLogin"
            android:layout_width="119dp"
            android:layout_height="30dp"
            app:cardCornerRadius="6.77dp"
            >
            <TextView
                android:background="#038C7F"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Log In"
                android:gravity="center"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSignUp"
            android:layout_marginLeft="10dp"
            android:layout_width="119dp"
            android:layout_height="30dp"
            app:cardCornerRadius="6.77dp"
            >
            <TextView
                android:background="#D9D9D9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:gravity="center"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#038C7F"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>