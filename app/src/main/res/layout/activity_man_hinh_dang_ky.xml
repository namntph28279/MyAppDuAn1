<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.ManHinhDangNhapDangKy.ManHinhDangKy">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        app:navigationIcon="@drawable/back"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:titleTextColor="@color/black"
        android:layout_height="?attr/actionBarSize"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/nhan"
          android:layout_marginBottom="25dp"

          />

      <TextView
          android:layout_marginBottom="10dp"
          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Bắt đầu nào"
          android:textColor="#223263"
          android:textStyle="bold"
          android:textSize="16dp"/>


      <TextView
          android:layout_marginBottom="23dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tạo một tài khoản mới "
          android:textSize="12dp"
          android:textColor="#9098B1"
          />

      <EditText
          android:layout_marginBottom="8dp"
          android:id="@+id/inputFullName"
          android:layout_width="343dp"
          android:layout_height="wrap_content"

          android:background="@drawable/round_border"
          android:drawableStart="@drawable/name"
          android:drawablePadding="16dp"
          android:ems="10"
          android:hint="Full Name"
          android:inputType="textEmailAddress"
          android:padding="16dp"
          />
      <EditText
          android:layout_marginBottom="8dp"
          android:id="@+id/inputEmail"
          android:layout_width="343dp"
          android:layout_height="wrap_content"

          android:background="@drawable/round_border"
          android:drawableStart="@drawable/email"
          android:drawablePadding="16dp"
          android:ems="10"
          android:hint="Your Email"
          android:inputType="textEmailAddress"
          android:padding="16dp"
          />
      <EditText
          android:layout_marginBottom="8dp"
          android:id="@+id/inputPassword"
          android:layout_width="343dp"
          android:layout_height="wrap_content"

          android:background="@drawable/round_border"
          android:drawableStart="@drawable/password"
          android:drawablePadding="16dp"
          android:ems="10"
          android:hint="Password"
          android:inputType="textEmailAddress"
          android:padding="16dp"
          />
      <EditText
          android:layout_marginBottom="8dp"
          android:id="@+id/inputPasswordAgain"
          android:layout_width="343dp"
          android:layout_height="wrap_content"
          android:background="@drawable/round_border"
          android:drawableStart="@drawable/password"
          android:drawablePadding="16dp"

          android:hint="Password Again"
          android:inputType="textEmailAddress"
          android:padding="16dp"
          />

          <CheckBox
            android:layout_marginLeft="12dp"
              android:layout_gravity="center"
              android:layout_width="343dp"
              android:layout_height="48dp"
              android:text="Đồng ý điều khoản dịch vụ?"
              android:textColor="#9098B1"
             />



      <androidx.cardview.widget.CardView
          android:layout_marginBottom="18dp"
          android:layout_marginTop="15dp"
          android:layout_width="343dp"
          android:layout_height="48dp"
          app:cardCornerRadius="5dp"
          android:id="@+id/Dangnhap">
          <TextView
              android:textStyle="bold"
              android:gravity="center"
              android:layout_width="343dp"
              android:layout_height="48dp"
              android:textSize="14dp"
              android:text="Đăng ký"
              android:textColor="@color/white"
              android:background="@color/black"/>
      </androidx.cardview.widget.CardView>


      <LinearLayout

          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView

              android:textSize="12dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Đã có tài khoản?"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:padding="0.5dp"
              android:text="Đăng nhập"
              android:textColor="@color/black"
              android:textSize="12dp"
              android:textStyle="bold" />

      </LinearLayout>
  </LinearLayout>
</LinearLayout>